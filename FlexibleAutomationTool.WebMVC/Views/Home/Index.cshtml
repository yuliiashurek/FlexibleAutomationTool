@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Book Notifications</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">

    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .whitehref {
            color: #fff;
        }

        .container {
            margin-top: 50px;
        }

        .jumbotron {
            background-color: #8B0000; /* Dark Red */
            color: #fff;
            padding: 80px 30px;
            margin-bottom: 0;
        }

        h1 {
            font-size: 3.5rem;
        }

        p {
            font-size: 1.25rem;
        }
    </style>
</head>
<body>

<div class="jumbotron text-center">
    <h1 class="display-3">Book Notifications</h1>
        <p class="lead">Stay informed about new books on <a class="whitehref" href="https://book-ye.com.ua/">Book Ye</a></p>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Welcome to Book Notifications</h2>
            <p>This is a simple application to help you receive notifications about new books on <a href="https://book-ye.com.ua/">Book Ye</a>. Although this page doesn't have any functionality, it serves as a starting point for your notifications setup.</p>
        </div>
        <div class="col-md-6">
                <img src="https://book-ye.com.ua/local/templates/book_ye/images/components/header-logo.png" alt="Book Image" class="img-fluid">
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
